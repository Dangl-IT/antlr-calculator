{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./demo/dist/files",
    "noImplicitAny": false,
    "lib": ["es2015", "es2015.core", "DOM"],
    "types": [
      "jasmine"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
